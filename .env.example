# Application
APP_NAME="AirDrop Viral"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Database
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=airdrop_viral
DB_USERNAME=airdrop_user
DB_PASSWORD=airdrop_password

# Redis Cache
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
REDIS_HOST=cache
REDIS_PASSWORD=null
REDIS_PORT=6379

# AWS S3 / Storage
FILESYSTEM_DISK=s3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=airdrop-viral-uploads
AWS_URL=
AWS_ENDPOINT=

# Mail
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@airdrop-viral.com"
MAIL_FROM_NAME="${APP_NAME}"

# Pusher/Broadcasting (optional)
BROADCAST_DRIVER=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

# Security
RATE_LIMIT_PER_MINUTE=60
MAX_UPLOAD_SIZE=5242880
PROFANITY_FILTER_ENABLED=true

# Frontend
VITE_APP_NAME="${APP_NAME}"
VITE_API_URL="${APP_URL}"