{
  "name": "Linder",
  "features": {
    "ghcr.io/devcontainers/features/php:1": {
      "version": "8.3"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },
  "postCreateCommand": "composer install --no-interaction && cp -n .env.example .env && php artisan key:generate --ansi && npm install",
  "forwardPorts": [8000, 5173],
  "portsAttributes": {
    "5173": {
      "label": "Vite (Frontend)",
      "onAutoForward": "notify"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "esbenp.prettier-vscode",
        "xdebug.php-pack"
      ]
    }
  }
}