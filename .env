# Application
APP_NAME="AirDrop Viral"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Database (PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=airdrop_viral
DB_USERNAME=airdrop_user
DB_PASSWORD=airdrop_password

# Redis Cache/Queue
REDIS_HOST=cache
REDIS_PASSWORD=null
REDIS_PORT=6379

# Queue Configuration
QUEUE_CONNECTION=redis
CACHE_DRIVER=redis
SESSION_DRIVER=redis

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=hello@airdropviral.com
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 Storage (Production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher/Broadcasting (Optional)
BROADCAST_DRIVER=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

# Google Cloud (Production Deployment)
GCP_PROJECT_ID=
GCP_REGION=us-central1

# AirDrop Feature Flags
AIRDROP_MAX_FILE_SIZE=10485760  # 10MB
AIRDROP_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,heic
AIRDROP_PROFILE_EXPIRY_DAYS=30

# Analytics
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Security
RATE_LIMIT_PER_MINUTE=60
TRUSTED_PROXIES=*
TRUSTED_HOSTS=localhost,airdropviral.com